<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/type3"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.login.LoginCustomer">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/color_boarder"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textAlignment="center"
                android:textColor="@color/sapphire"
                android:textSize="36sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/color_boarder"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:hint="E-mail"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/color_boarder"
                android:drawableLeft="@drawable/baseline_enhanced_encryption_24"
                android:drawablePadding="8dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textAllCaps="false"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/sapphire"
                android:onClick="loginButton"
                android:text="Login"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

            <TextView
                android:id="@+id/signInWithGoogle"
                android:layout_width="190dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/color_boarder"
                android:drawableLeft="@drawable/googleg_standard_color_18"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="Sign in with Google"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/signupText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="Not yet registered?"
                android:textColor="@color/coralPink"
                android:textSize="18sp" />

            <Button
                android:id="@+id/Sign_Up"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/coralPink"
                android:onClick="registerCustomer"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:cornerRadius="10dp" />
            <ImageView
                android:id="@+id/customImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logo"
                android:layout_gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/back"
        android:layout_width="118dp"
        android:layout_height="60dp"
        android:layout_gravity="left"
        android:backgroundTint="@color/grey"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
        android:onClick="backToFirstScreen"
        android:text="Back"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="20dp" />
</LinearLayout>