<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal state -->
    <item android:drawable="@android:color/transparent" android:state_pressed="false" android:state_focused="false"/>
    <!-- Pressed state -->
    <item android:drawable="@color/darker_gray" android:state_pressed="true"/>
    <!-- Focused state -->
    <item android:drawable="@color/lighter_gray" android:state_focused="true"/>
</selector>