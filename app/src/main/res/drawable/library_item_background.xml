<!-- library_item_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When library item is selected -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#9F5294FF" /> <!-- Set background color when selected -->
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" /> <!-- Add border when selected -->
            <corners android:radius="8dp" /> <!-- Set corner radius for a rounded look -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set default background color -->
            <stroke
                android:width="2dp"
                android:color="#E0E0E0" /> <!-- Add border in the default state -->
            <corners android:radius="8dp" /> <!-- Set corner radius for a rounded look -->
        </shape>
    </item>
</selector>
